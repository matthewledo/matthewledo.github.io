---
import Layout from "../../layouts/Layout.astro";

export interface Props {
  title: string;
  summary: string;
  demo?: string;
  code?: string;
}

const { title, summary, demo, code } = Astro.props;
---

<Layout title={title}>
  <section class="max-w-4xl mx-auto px-6 py-16 space-y-12">

    <!-- Hero -->
    <header class="text-center space-y-4">
      <h1 class="text-4xl font-bold text-slate-900">
        {title}
      </h1>

      <p class="text-lg text-slate-700">
        {summary}
      </p>

      {(demo || code) && (
        <div class="flex justify-center gap-6 pt-4">
          {demo && (
            <a
              href={demo}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm font-bold text-emerald-600 hover:underline"
            >
              Live Demo
            </a>
          )}

          {code && (
            <a
              href={code}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm font-bold text-slate-500 hover:text-slate-900 hover:underline"
            >
              Source Code
            </a>
          )}
        </div>
      )}
    </header>

    <!-- Main content -->
    <main class="space-y-12">
      <slot />
    </main>

    <!-- Back -->
    <footer class="text-center pt-8">
      <a
        href="/projects"
        class="text-sm font-bold text-emerald-600 hover:underline"
      >
        ‚Üê Back to Projects
      </a>
    </footer>

  </section>
</Layout>
